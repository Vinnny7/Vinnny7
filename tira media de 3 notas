Algoritmo "semnome"

Var
   Nota: inteiro
   soma,i: inteiro
   media: real


Inicio
   para i de 1 ate 3 passo 1 faca
      repita
         escreval("Digite a ", i, " nota do aluno: ")
         leia(Nota)

         se (nota < 0) ou (nota > 10) entao
            escreval("Nota inválida. Digite uma nota entre 0 e 10.")
            escreval
         fimse

      ate (nota >=0) e (nota <=10)

      soma <- soma + nota
   fimpara

   media <- soma / 3
   escreval("Média: ", media)
   
   se media >= 7 entao
      escreval("Aprovado.")
   senao
        se media >= 5 entao
           escreval("Recuperação.")
        senao
             escreval("Reprovado")
        fimse
   fimse


Fimalgoritmo
